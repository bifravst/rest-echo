{
  "name": "@nordicsemiconductor/rest-echo",
  "version": "0.0.0-development",
  "description": "A REST echo server used for the Nordic Developer Academy developed using AWS CDK in TypeScript.",
  "type": "module",
  "scripts": {
    "prepare": "husky install && check-node-version --package",
    "test:e2e": "npx tsx --no-warnings ./features/run-features.ts > e2e-test-result.json && cat e2e-test-result.json | npx tsx --no-warnings ./features/console-reporter.ts --only-failed --with-timestamps",
    "test": "find ./ -type f -name \\*.spec.ts -not -path './nrfcloud-application-protocols/*' | xargs npx tsx --test --test-reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/rest-echo.git"
  },
  "bugs": {
    "url": "https://github.com/bifravst/rest-echo/issues"
  },
  "homepage": "https://github.com/bifravst/rest-echo#readme",
  "keywords": [
    "nordicsemiconductor",
    "nordic-developer-academy",
    "aws",
    "cdk",
    "rest"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.429.0",
    "@aws-sdk/client-cloudwatch-logs": "3.429.0",
    "@aws-sdk/client-dynamodb": "3.429.0",
    "@aws-sdk/client-iam": "3.429.0",
    "@aws-sdk/util-dynamodb": "3.429.0",
    "@commitlint/config-conventional": "17.8.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.98",
    "@nordicsemiconductor/bdd-markdown": "7.0.4",
    "@nordicsemiconductor/cloudformation-helpers": "9.0.2",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "16.0.23",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.93",
    "aws-cdk": "2.101.1",
    "aws-cdk-lib": "2.101.1",
    "cdk": "2.101.1",
    "chalk": "5.3.0",
    "check-node-version": "4.2.1",
    "constructs": "10.3.0",
    "eslint-plugin-unicorn": "48.0.1",
    "husky": "8.0.3",
    "jsonata": "2.0.3",
    "prettier": "3.0.3",
    "tsx": "3.13.0",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "dependencies": {
    "@nordicsemiconductor/from-env": "2.0.0"
  }
}
