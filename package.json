{
  "name": "@bifravst/rest-echo",
  "version": "0.0.0-development",
  "description": "A REST echo server used for the Nordic Developer Academy developed using AWS CDK in TypeScript.",
  "type": "module",
  "scripts": {
    "prepare": "husky && check-node-version --package",
    "test:e2e": "npx tsx --no-warnings ./features/run-features.ts > e2e-test-result.json && cat e2e-test-result.json | npx tsx --no-warnings ./features/console-reporter.ts --only-failed --with-timestamps",
    "test": "tsx --test ./**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bifravst/rest-echo.git"
  },
  "bugs": {
    "url": "https://github.com/bifravst/rest-echo/issues"
  },
  "homepage": "https://github.com/bifravst/rest-echo#readme",
  "keywords": [
    "nordicsemiconductor",
    "nordic-developer-academy",
    "aws",
    "cdk",
    "rest"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.616.0",
    "@aws-sdk/client-cloudwatch-logs": "3.616.0",
    "@aws-sdk/client-dynamodb": "3.619.0",
    "@aws-sdk/client-iam": "3.616.0",
    "@aws-sdk/util-dynamodb": "3.619.0",
    "@bifravst/bdd-markdown": "8.2.6",
    "@bifravst/cloudformation-helpers": "9.1.1",
    "@bifravst/eslint-config-typescript": "6.1.12",
    "@bifravst/prettier-config": "1.0.4",
    "@commitlint/config-conventional": "19.2.2",
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.2",
    "aws-cdk": "2.150.0",
    "aws-cdk-lib": "2.150.0",
    "cdk": "2.150.0",
    "chalk": "5.3.0",
    "check-node-version": "4.2.1",
    "constructs": "10.3.0",
    "husky": "9.1.2",
    "jsonata": "2.0.5",
    "tsx": "4.16.2"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "prettier": "@bifravst/prettier-config",
  "dependencies": {
    "@bifravst/from-env": "3.0.2"
  }
}
